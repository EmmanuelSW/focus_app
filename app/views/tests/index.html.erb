<p id="notice"><%= notice %></p>

<h1 class="ui left floated header">Preguntas para el Concentrese</h1>
<%= link_to 'Ir al concentrese', focus_tests_path, class:"ui right floated purple button" %>
<br><br><br>
<table class="ui selectable striped celled table">
  <thead>
    <tr>
      <th>Pregunta</th>
      <th>Respuesta</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= sanitize test.question %></td>
        <td><%= sanitize test.answer %></td>
        <td>
        <%= link_to 'Editar', edit_test_path(test), class:"ui grey button" %>
        <%= link_to 'Eliminar',test, method: :delete, data: { confirm: 'Estas seguro?' }, class:"ui grey button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear preguntas', new_test_path, class:"ui purple button" %>
